<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/main_check_true</item>
    <item name="colorPrimaryDark">@color/main_check_true</item>
    <item name="colorAccent">@color/main_check_true</item>
  </style>

  <style name="CustomProgressDialog" parent="@style/CustomDialog">
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:background">#00ffffff</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="CustomDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
  </style>

  <style name="yq_text_98">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/yq_color_a0a0a0</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="yq_text_black">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/yq_text_color_blank</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="yq_mypopwindow_anim_style">
    <item name="android:windowEnterAnimation">@anim/yj_anim_pop_show</item>
    <!-- 指定显示的动画xml -->
    <item name="android:windowExitAnimation">@anim/yj_anim_pop_hidden</item>
    <!-- 指定消失的动画xml -->
  </style>

  <style name="yq_line_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/yq_c_bg</item>
  </style>

</resources>
