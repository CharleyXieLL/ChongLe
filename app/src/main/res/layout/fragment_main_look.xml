<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="50dp"
      android:paddingRight="50dp"
      >

    <LinearLayout
        android:id="@+id/layout_fragment_look_chong_quan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_fragment_look_title_chong_quan"
          android:layout_gravity="center_horizontal"
          android:text="宠圈"
          android:textSize="18sp"
          style="@style/yq_text_black"
          />
      <View
          android:id="@+id/line_fragment_look_chong_quan"
          android:layout_width="35dp"
          android:layout_height="3dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="4dp"
          android:background="@color/yq_text_color_blank"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fragment_look_ke_pu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_fragment_look_title_ke_pu"
          android:layout_gravity="center_horizontal"
          android:text="科普"
          android:textColor="@color/yq_color_a0a0a0"
          android:textSize="18sp"
          style="@style/yq_text_black"
          />
      <View
          android:id="@+id/line_fragment_look_ke_pu"
          android:layout_width="35dp"
          android:layout_height="3dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="4dp"
          android:background="@color/yq_text_color_blank"
          android:visibility="gone"
          />
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="4dp"
      android:background="@drawable/gradul_look_fragment_title"
      />

  <com.jiajia.badou.view.hfrecycler.HeaderAndFooterRecyclerView
      android:id="@+id/recycler_look_fragment_chong_quan"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:visibility="gone"
      />

  <com.jiajia.badou.view.hfrecycler.HeaderAndFooterRecyclerView
      android:id="@+id/recycler_look_fragment_ke_pu"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:visibility="gone"
      />

</LinearLayout>