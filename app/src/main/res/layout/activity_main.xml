<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiajia.badou.activity.MainActivity"
    >

  <FrameLayout
      android:id="@+id/main_fragment_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="55dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yq_c_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:id="@+id/layout_main_check_main_page"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/img_main_check_main_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/check_main_page_false"
            />

        <TextView
            android:id="@+id/tv_main_tab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="首页"
            android:textSize="12sp"
            style="@style/yq_text_black"
            />
      </LinearLayout>


      <LinearLayout
          android:id="@+id/layout_main_check_store"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/img_main_check_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/check_store_false"
            />

        <TextView
            android:id="@+id/tv_main_tab_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="商城"
            android:textSize="12sp"
            style="@style/yq_text_black"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_main_check_look"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/img_main_check_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/check_look_false"
            />

        <TextView
            android:id="@+id/tv_main_tab_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="发现"
            android:textSize="12sp"
            style="@style/yq_text_black"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_main_check_mine"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/img_main_check_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/check_mine_false"
            />

        <TextView
            android:id="@+id/tv_main_tab_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="个人"
            android:textSize="12sp"
            style="@style/yq_text_black"
            />
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>


</RelativeLayout>
