<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/yq_base_title"/>

  <View style="@style/yq_line_style"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      >
    <RelativeLayout
        android:id="@+id/relat_pet_primp_address_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:drawablePadding="5dp"
          android:drawableRight="@mipmap/arrow_bottom_grey"
          android:gravity="center"
          android:text="全城"
          style="@style/yq_text_black"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_pet_primp_intelligent_sort"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:drawablePadding="5dp"
          android:drawableRight="@mipmap/arrow_bottom_grey"
          android:gravity="center"
          android:text="智能排序"
          style="@style/yq_text_black"
          />
    </RelativeLayout>
  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <com.jiajia.badou.view.hfrecycler.HeaderAndFooterRecyclerView
        android:id="@+id/recycler_pet_primp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradul_look_fragment_title"
        />
  </RelativeLayout>


</LinearLayout>