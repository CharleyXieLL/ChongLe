<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_issue_money_purpose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="366dp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:orientation="vertical"
      >

    <com.allen.library.SuperTextView
        android:id="@+id/super_dialog_issue_money_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sBackgroundDrawableRes="@color/yq_c_bg"
        app:sCenterTextColor="@color/yq_text_color_blank"
        app:sCenterTextSize="@dimen/yq_headline"
        app:sCenterTextString="请选择实际资金用途"
        />

    <TextView
        android:id="@+id/tv_dialog_issue_money_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yq_c_bg"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="禁止用于购房、投资及各种非消费类场景"
        android:textSize="@dimen/yq_body"
        style="@style/yq_text_98"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_dialog_report_lend_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yq_shape_10_bottom_radius_white"
        android:scrollbars="vertical"
        />

  </LinearLayout>

</RelativeLayout>