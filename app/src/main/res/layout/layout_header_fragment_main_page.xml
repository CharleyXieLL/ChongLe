<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <com.youth.banner.Banner
      android:id="@+id/fragment_main_page_banner"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginBottom="7.5dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <ImageView
          android:id="@+id/img_main_service_store"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@mipmap/cl_main_store"
          />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/yq_c_bg"
            />
      </RelativeLayout>
      <ImageView
          android:id="@+id/img_main_service_jiyang"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@mipmap/cl_main_jiyang"
          />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/yq_c_bg"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <ImageView
          android:id="@+id/img_main_service_yiliao"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@mipmap/main_yiliao"
          />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/yq_c_bg"
            />
      </RelativeLayout>
      <ImageView
          android:id="@+id/img_main_service_meirong"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@mipmap/main_meirong"
          />
    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:background="@color/yq_c_bg"
      />

  <TextView
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:text="宠物精选"
      style="@style/yq_text_black"
      />


</LinearLayout>