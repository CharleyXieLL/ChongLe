<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yq_c_bg"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/white"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_15"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="center_vertical"
          android:background="@mipmap/yj_search_grey"
          />

      <EditText
          android:id="@+id/edit_store_search"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_weight="1"
          android:background="@null"
          android:gravity="left|center_vertical"
          android:hint="点击搜索"
          android:textColor="@color/yq_text_color_blank"
          android:textColorHint="@color/yq_color_a0a0a0"
          android:textSize="13sp"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_store_title_goods_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="@mipmap/gouwuche"
          />

      <TextView
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="2dp"
          android:text="购物车"
          android:textSize="11sp"
          style="@style/yq_text_black"
          />
    </LinearLayout>

  </LinearLayout>


  <com.jiajia.badou.view.hfrecycler.HeaderAndFooterRecyclerView
      android:id="@+id/fragment_store_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      />

</LinearLayout>