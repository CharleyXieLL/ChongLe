<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="240dp"
    android:padding="0dp">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:foreground="?android:attr/selectableItemBackground"
      android:stateListAnimator="@anim/item_animator"
      app:cardPreventCornerOverlap="false"
      app:cardCornerRadius="8dp"
      app:cardUseCompatPadding="true"
      tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/yq_shape_8r_white"
        android:orientation="vertical"
        >
      <ImageView
          android:id="@+id/cover"
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:scaleType="fitXY"
          android:background="@color/main_check_true"
          />

      <TextView
          android:id="@+id/tv_item_mine_pet_name"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:text="巴豆"
          android:textColor="@color/yj_black"
          style="@style/yq_text_black"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:paddingLeft="20dp"
          android:paddingBottom="10dp"
          android:paddingRight="20dp"
          >
        <TextView
            android:id="@+id/tv_item_mine_pet_birthday"
            android:text="生日：2017.08.08"
            android:textSize="@dimen/yq_body"
            style="@style/yq_text_black"
            />
        <TextView
            android:id="@+id/tv_item_mine_pet_type"
            android:layout_alignParentRight="true"
            android:text="阿拉斯加"
            android:textSize="@dimen/yq_body"
            style="@style/yq_text_black"
            />
      </RelativeLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</RelativeLayout>
