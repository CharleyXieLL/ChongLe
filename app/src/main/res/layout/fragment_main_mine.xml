<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      >
    <TextView
        android:layout_centerVertical="true"
        android:text="个人中心"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/yq_text_black"
        />
    <RelativeLayout
        android:id="@+id/relat_mine_fragment_reset"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >
      <ImageView
          android:id="@+id/img_mine_fragment_reset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="16dp"
          android:background="@mipmap/mine_reset"
          />
    </RelativeLayout>

  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/img_mine_fragment_avatar"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_gravity="center_vertical"
          android:scaleType="centerCrop"
          android:src="@mipmap/yj_defoult_user_head"
          app:riv_corner_radius="8dp"
          />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingLeft="20dp"
          >
        <TextView
            android:id="@+id/tv_mine_fragment_my_name"
            android:text="巴豆霸霸"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/yq_text_black"
            />
        <TextView
            android:id="@+id/tv_mine_fragment_sign"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="虽然巴豆又丑又臭，但我还是很爱他，只是他打呼噜真的太响了。"
            android:textSize="14sp"
            style="@style/yq_text_black"
            />
      </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/yq_c_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tv_mine_fragment_order_bill"
          android:layout_width="0dp"
          android:layout_marginTop="16dp"
          android:layout_weight="1"
          android:drawablePadding="5dp"
          android:drawableTop="@mipmap/mine_order_bill"
          android:text="我的订单"
          style="@style/yq_text_black"
          />
      <TextView
          android:id="@+id/tv_mine_fragment_goods_address"
          android:layout_width="0dp"
          android:layout_marginTop="16dp"
          android:layout_weight="1"
          android:drawablePadding="5dp"
          android:drawableTop="@mipmap/mine_goods_address"
          android:text="收货地址"
          style="@style/yq_text_black"
          />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/yq_c_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >

      <TextView
          android:text="我的宠物"
          style="@style/yq_text_black"
          />

      <TextView
          android:id="@+id/tv_mine_fragment_my_pet_reset"
          android:layout_alignParentRight="true"
          android:text="编辑"
          android:textColor="@color/main_check_true"
          android:textSize="14sp"
          style="@style/yq_text_black"
          />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_mine_fragment_pet_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        />

  </LinearLayout>
</LinearLayout>